<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pablo.easycontacts.ui.PerfilActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:elevation="50dp"
        android:clickable="true"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <!-- //////////////////////////////////////////////////////////////////////////////////// -->
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/output_perfil_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="18sp"
                android:text="Name Sobrenome"/>

        </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#493c3f41"/>
    <!-- //////////////////////////////////////////////////////////////////////////////////// -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/output_perfil_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="(62) 9 1234-5678"/>

                <ImageView
                    android:id="@+id/open_call_perfil"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/phone_icon"
                    android:tint="@color/colorPrimaryDark"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/open_message_perfil"
                    android:layout_toStartOf="@id/open_call_perfil"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/message_icon"
                    android:clickable="true"/>

                <!--<ImageView-->
                    <!--android:id="@+id/open_wpp_perfil"-->
                    <!--android:layout_toStartOf="@+id/open_message_perfil"-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginEnd="5dp"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:src="@drawable/whatsapp_icone"-->
                    <!--android:clickable="true"/>-->

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#493c3f41"/>
            <!-- //////////////////////////////////////////////////////////////////////////////////// -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/output_perfil_email"
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/open_email_perfil"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/mail_icon"
                    android:clickable="true" />


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#493c3f41"/>
            <!-- //////////////////////////////////////////////////////////////////////////////////// -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/output_perfil_facebook"
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/open_facebook_perfil"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/facebook_icon"
                    android:clickable="true" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#493c3f41"/>
            <!-- //////////////////////////////////////////////////////////////////////////////////// -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/output_perfil_instagram"
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/open_instagram_perfil"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/instagram"
                    android:clickable="true" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#493c3f41"/>
            <!-- //////////////////////////////////////////////////////////////////////////////////// -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/output_perfil_twitter"
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/open_twitter_perfil"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/twitter"
                    android:clickable="true" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#493c3f41"/>
            <!-- //////////////////////////////////////////////////////////////////////////////////// -->

        </LinearLayout>
    </android.support.v7.widget.CardView>




    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_edit_contacts_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:elevation="20dp"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_edit_color_black_24dp"
        android:clickable="true"
        android:tint="@android:color/white"
        app:fabSize="normal"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_delete_contacts_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/btn_edit_contacts_perfil"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:elevation="20dp"
        android:src="@drawable/ic_delete_black_24dp"
        android:clickable="true"
        android:tint="@android:color/white"
        app:fabSize="normal"/>


</RelativeLayout>
